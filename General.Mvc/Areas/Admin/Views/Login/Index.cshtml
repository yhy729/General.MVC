        jQuery(function () {
            $("button[type='button']").click(function () {
                if ($("form").valid()) {
                    var r = $("input[type='hidden']").val();
                    var account = $("input[name='Account']").val();
                    var password = $("input[name='Password']").val();
                    $.get('/admin/Login/GetSalt?account=' + account, function (salt) {
                        password = $.md5(password + salt);
                        password = $.md5(password + r);
                        var data = {
                            'Account': account,
                            'Password': password,
                            'R': r
                        };
                        //console.log(data);
                        $.post('/admin/Login/Logon', data, function (result) {
                                if (result.status) {
                                    $("#j_error_msg").text("登录成功，正在进入系统...");
                                    window.location.href = "/admin/Main/Index";
                                } else {
                                    $("#j_error_msg").text(result.message);
                                }
                        })
                    })
                }
            })
        })
